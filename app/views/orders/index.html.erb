<div class="container">
	
	<h2>Order Page</h2>
	<input type="text" placeholder="Your name" ng-model="name">

	<div ng-controller="OrdersCtrl">
		<table class="table table-hover">
			<thead>
				<td>Order ID</td>
				<td>Total</td>
				<td>Product</td>
				<td></td>
			</thead>
			<tr ng-repeat="order in orders | orderBy:'-id':reverse">
				<td>
					{{order.id}}
				</td>
				<td>
					<strong>{{order.total | currency}}</strong>
				</td>
				<td>
					{{order.product_id}}
					<small ng-show="order.id"><br>-{{order.user_id}}</small>
				</td>
				<td>
					<!-- fill with content later -->
				</td>
			</tr>
		</table>
		
	</div>

</div>