<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">

		<div class="col-md-3">
			<p>
				<strong>Name:</strong>
  				<%= @product.name %>
			</p>
		</div>

		<div class="col-md-3">
			<p>
  				<strong>Description:</strong>
  				<%= @product.description %>
			</p>
		</div>

		<div class="col-md-3">
			<p>
  				<strong>Image url:</strong>
  				<%= image_tag(@product.image_url, class: "img-responsive") %>
			</p>
		</div>

		<div class="col-md-3">
			<p>
  				<strong>Color:</strong>
  				<%= @product.color %>
			</p>
		</div>



	</div>
</div>

