<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">

		<div class="col-md-3">
			<p>
				<strong>Name:</strong>
  				<%= @product.name %>
			</p>
		</div>

		<div class="col-md-3">
			<p>
  				<strong>Details:</strong>
  				<%= @product.details %>
			</p>
		</div>

		<div class="col-md-3">
			<p>
  				<strong>Image url:</strong>
  				<%= image_tag(@product.image_url, class: "img-responsive") %>
			</p>
		</div>

		<div class="col-md-3">
			<p>
  				<strong>Color:</strong>
  				<%= @product.color %>
			</p>
		</div>

		<div class="col-md-3">
			<p>
  				<strong>Price:</strong>
  				<%= @product.price %>
			</p>
		</div>


	</div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

