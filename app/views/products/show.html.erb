<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">

		<div class="col-md-3">
		<h3>Name:</h3>
			<p>
			<strong><%= @product.name %></strong>
  				
			</p>
		</div>

		<div class="col-md-3">
		  <h3>Details:</h3>
			<p>
  				<%= @product.details %>
			</p>
		</div>

		<div class="col-md-3">
		  <h3>Product Photo <span class="glyphicon glyphicon-picture"></span></h3>
			<p>
  				<%= image_tag(@product.image_url, class: "img-responsive") %>
			</p>
		</div>

		<div class="col-md-3">
		  <h3>Color:</h3>
			<p>
  				<%= @product.color %>
			</p>
		</div>

		<div class="col-md-3">
		  <h3>Price:</h3>
			<p>
  				<%= @product.price %>
			</p>
		</div>


	</div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>