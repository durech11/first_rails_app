<h1>Current Product Listing</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Image url</th>
      <th>Color</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.details %></td>
        <td><%= image_tag(product.image_url, class: "img-responsive") %></td>
        <td><%= product.color %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

