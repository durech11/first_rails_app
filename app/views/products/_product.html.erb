<% cache product do %>

<% @products.each do |product| %>
    <div class="row">
      <div class="col-md-6">
        <h3><%= product.name %></h3>
        <%= image_tag(product.image_url, class: "img-responsive") %>      
      </div>
      <div class="col-md-6">
        <h3>Details</h3><p><%= product.details %></p>
        <h4>Color: <%= product.color %></h4>
        <h4>Price: $<%= product.price %></h4>
        <%= link_to 'Show', product, class: 'btn btn-success' %>
        <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
<% end %>

<% end %>